{
  "name": "discord-anime-bot",
  "version": "1.0.0",
  "description": "Discord anime bot",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --env-file=.env src/index.ts",
    "lint": "oxlint ./src --fix",
    "format": "prettier --write ./src",
    "test:redis": "bun --env-file=.env scripts/test-redis.ts",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:redis-cli": "docker-compose exec redis redis-cli"
  },
  "author": "jtclarkjr",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "discord.js": "^14.22.1",
    "openai": "^5.20.0",
    "redis": "^5.8.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/redis": "^4.0.11",
    "oxlint": "^1.14.0",
    "prettier": "^3.6.2"
  }
}
